doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Super Calc
    link(rel='stylesheet', href='css/app.css')
  body
    h1 Super Calc
    div.main
      table.calculator
        tbody
          tr
            td#display(colspan=5) 0
          tr
            td.number.button 7
            td.number.button 8
            td.number.button 9
            td.operator.button(data-op='add') +
            td.operator.button(data-op='sum') E
          tr
            td.number.button 4
            td.number.button 5
            td.number.button 6
            td.operator.button(data-op='sub') -
            td.operator.button(data-op='exp') ^
          tr
            td.number.button 1
            td.number.button 2
            td.number.button 3
            td.operator.button(data-op='mul') *
            td.operator.button(data-op='root') Sq
          tr
            td.number.button 0
            td.decimal.button .
            td.sign.button Â±
            td.operator.button(data-op='div') /
            td.operator.button(data-op='fac') !
          tr
            td.clear.button(colspan=1) X
            td.clear.button#clear-box(colspan=2) Clear
            td.push.button(colspan=2) Push
          tr
            td#queue(colspan=5)




    script(src='js/vendor/jquery-2.1.0.js')
    script(src='js/source/main.js')
